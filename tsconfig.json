{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@pc/angular": ["libs/angular/src/index.ts"],
      "@pc/angular/auth": ["libs/angular/src/auth/index.ts"],
      "@pc/angular/crud-api": ["libs/angular/src/crud-api/index.ts"],
      "@pc/angular/logger": ["libs/angular/src/logger/index.ts"],
      "@pc/angular/material": ["libs/angular/src/material/index.ts"],
      "@pc/angular/menu": ["libs/angular/src/menu/index.ts"],
      "@pc/angular/shared": ["libs/angular/src/shared/index.ts"],
      "@pc/angular/socket": ["libs/angular/src/socket/index.ts"],
      "@pc/angular/util": ["libs/angular/src/util/index.ts"],

      "@pc/nest": ["libs/nest/src/index.ts"],
      "@pc/nest/auth": ["libs/nest/src/auth/index.ts"],
      "@pc/nest/entity-service": ["libs/nest/src/entity-service/index.ts"],
      "@pc/nest/logger": ["libs/nest/src/logger/index.ts"],
      "@pc/nest/socket": ["libs/nest/src/socket/index.ts"],
      "@pc/nest/util": ["libs/nest/src/util/index.ts"],

      "@pc/power-comp/entity": ["libs/power-comp/entity/src/index.ts"],
      "@pc/power-comp/shared": ["libs/power-comp/shared/src/index.ts"],
      
